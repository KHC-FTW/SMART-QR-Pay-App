<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- Camera is used for QR scanning. Mark hardware feature optional so the app can still install on devices without a camera. -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SMARTQRPay">
        <activity
            android:name=".activity.ViewHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".activity.TopUpActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainMenuActivity"
            android:exported="true" />
        <activity
            android:name=".activity.TransferMetadataActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CompareMetadataActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MakePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ReceivePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GetMetadataActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ScanQRActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GenQRActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ReceiveActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TransmitActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DeveloperModeActivity"
            android:exported="false" />
    </application>

</manifest>